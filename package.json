  "description": "Unified development portfolio with multi-terminal support",
  "main": "src/App.tsx",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --fix",
    "test": "node tests/run-all-terminal-tests.js",
    "test:quick": "node tests/run-all-terminal-tests.js --quick",
