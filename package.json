{
  "name": "claude-dev-portfolio",
  "version": "1.0.0",
  "description": "Professional development portfolio with Matrix Card notes system, real-time project status, and comprehensive project management",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "sync": "node scripts/sync-projects.js",
    "thumbnails": "node scripts/generate-thumbnails.js",
    "launcher": "node launcher-server.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "dev:debug": "vite --mode development --host 0.0.0.0 --debug",
    "build:analyze": "vite build --mode analyze",
    "preview:host": "vite preview --host 0.0.0.0",
    "dev:all": "powershell -ExecutionPolicy Bypass -File .\\scripts\\start-all-enhanced.ps1",
    "kill:all": "powershell -ExecutionPolicy Bypass -File .\\scripts\\kill-all-servers.ps1",
    "ports:check": "powershell -ExecutionPolicy Bypass -File .\\scripts\\check-ports.ps1",
    "extension:build": "cd vscode-extension/claude-portfolio && npm run compile",
    "extension:package": "cd vscode-extension/claude-portfolio && npx vsce package",
    "extension:install": "cd vscode-extension/claude-portfolio && code --install-extension claude-portfolio-0.0.1.vsix --force",
    "extension:watch": "cd vscode-extension/claude-portfolio && npm run watch",
    "ci": "npm run lint && npm run type-check && npm run test:run && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@react-spring/web": "^9.7.3",
    "@types/three": "^0.178.1",
    "clsx": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.178.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "@vitest/ui": "^1.0.4",
    "cors": "^2.8.5",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "msw": "^2.0.11",
    "playwright": "^1.40.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4"
  }
}
