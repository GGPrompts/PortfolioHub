{
  "name": "claude-portfolio",
  "displayName": "Claude Portfolio Manager",
  "description": "Manage your Claude Windows portfolio projects directly in VS Code",
  "version": "0.0.1",
  "publisher": "claude-dev",
  "private": true,
  "__metadata": {
    "isBuiltin": false,
    "publisherId": "claude-dev",
    "publisherDisplayName": "Claude Dev"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionDependencies": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-portfolio.openProject",
        "title": "Open Project",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.showDashboard",
        "title": "Show Portfolio Dashboard",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.runProject",
        "title": "Run Project",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.openProjectInBrowser",
        "title": "Open in Browser",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.refreshProjects",
        "title": "Refresh Projects",
        "category": "Claude Portfolio",
        "icon": "$(refresh)"
      },
      {
        "command": "claude-portfolio.openCheatSheet",
        "title": "Open Windows Command Cheat Sheet",
        "category": "Claude Portfolio",
        "icon": "$(book)"
      },
      {
        "command": "claude-portfolio.test",
        "title": "Test Extension",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.quickOpen",
        "title": "Quick Open Project",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.copyCheatCommand",
        "title": "Copy Command",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.openProjectInExternalBrowser",
        "title": "Open in External Browser",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.openPortfolio",
        "title": "Open Full Portfolio",
        "category": "Claude Portfolio",
        "icon": "$(home)"
      },
      {
        "command": "claude-portfolio.openAIAssistant",
        "title": "Open AI Assistant",
        "category": "Claude Portfolio",
        "icon": "$(sparkle)"
      },
      {
        "command": "claude-portfolio.projectCommand",
        "title": "Execute Project Command",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.stopProject",
        "title": "Stop Project",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.toggleProjectSelection",
        "title": "Toggle Project Selection",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.selectProject",
        "title": "Show Commands",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.clearProjectSelection",
        "title": "Clear Selection",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.selectAllProjects",
        "title": "Select All Projects",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.batchStartProjects",
        "title": "Start Selected Projects",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.batchStopProjects",
        "title": "Stop Selected Projects",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.batchOpenBrowser",
        "title": "Open Selected in Browser",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.batchAddToWorkspace",
        "title": "Add Selected to Workspace",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.batchNpmInstall",
        "title": "Install Dependencies (Selected)",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.batchNpmBuild",
        "title": "Build Selected Projects",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.batchNpmTest",
        "title": "Test Selected Projects",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.batchGitStatus",
        "title": "Git Status (Selected)",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.batchGitPull",
        "title": "Git Pull (Selected)",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.project.select",
        "title": "Select Project Action",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.launchTerminalSystem",
        "title": "Launch Terminal System",
        "category": "Claude Portfolio"
      },
      {
        "command": "claude-portfolio.checkTerminalSystemHealth",
        "title": "Check Terminal System Health",
        "category": "Claude Portfolio",
        "icon": "$(pulse)"
      },
      {
        "command": "claude-portfolio.killTerminalSystemPorts",
        "title": "Kill Terminal System Processes",
        "category": "Claude Portfolio",
        "icon": "$(close-all)"
      },
      {
        "command": "claude-portfolio.openTerminalSystemLogs",
        "title": "Open Terminal System Logs",
        "category": "Claude Portfolio",
        "icon": "$(output)"
      },
      {
        "command": "claude-portfolio.toggleMCPSecurity",
        "title": "Toggle MCP Security Validation",
        "category": "Claude Portfolio",
        "icon": "$(shield)"
      },
      {
        "command": "claude-portfolio.checkMCPStatus",
        "title": "Check MCP Server Status",
        "category": "Claude Portfolio",
        "icon": "$(server-process)"
      },
      {
        "command": "claude-portfolio.restartMCPServer",
        "title": "Restart MCP Server",
        "category": "Claude Portfolio",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-portfolio",
          "title": "Claude Portfolio",
          "icon": "$(folder-library)"
        }
      ]
    },
    "views": {
      "claude-portfolio": [
        {
          "id": "claudeProjects",
          "name": "Projects",
          "contextualTitle": "Claude Projects",
          "canSelectMany": true
        },
        {
          "id": "claudeMultiProjectCommands",
          "name": "Batch Commands",
          "contextualTitle": "Multi-Project Batch Commands",
          "when": "true",
          "icon": "$(layers)"
        },
        {
          "id": "claudeVSCodePages",
          "name": "VS Code Pages",
          "contextualTitle": "VS Code Integrated Pages",
          "when": "true",
          "icon": "$(browser)"
        },
        {
          "id": "claudeMCPControls",
          "name": "MCP Controls",
          "contextualTitle": "MCP Server Management",
          "when": "true",
          "icon": "$(server-process)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "claudeProjects",
        "contents": "Welcome to Claude Portfolio!\n\n[ðŸš€ Open Full Portfolio](command:claude-portfolio.openPortfolio)\n\n[Refresh Projects](command:claude-portfolio.refreshProjects)"
      }
    ],
    "webviewOptions": {
      "retainContextWhenHidden": true
    },
    "menus": {
      "view/title": [
        {
          "command": "claude-portfolio.openPortfolio",
          "when": "view == claudeProjects",
          "group": "navigation"
        },
        {
          "command": "claude-portfolio.refreshProjects",
          "when": "view == claudeProjects",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "claude-portfolio.runProject",
          "when": "view == claudeProjects && (viewItem == project || viewItem == selectedProject)",
          "group": "inline"
        },
        {
          "command": "claude-portfolio.openProjectInBrowser",
          "when": "view == claudeProjects && (viewItem == project || viewItem == selectedProject)",
          "group": "inline"
        },
        {
          "command": "claude-portfolio.selectProject",
          "when": "view == claudeProjects && (viewItem == project || viewItem == selectedProject || viewItem == vsCodeProject || viewItem == selectedVSCodeProject)",
          "group": "1_commands"
        },
        {
          "command": "claude-portfolio.openAIAssistant",
          "when": "view == claudeProjects && (viewItem == project || viewItem == selectedProject || viewItem == vsCodeProject || viewItem == selectedVSCodeProject)",
          "group": "2_ai"
        },
        {
          "command": "claude-portfolio.checkTerminalSystemHealth",
          "when": "view == claudeProjects && (viewItem == terminalSystemProject || viewItem == selectedTerminalSystemProject)",
          "group": "3_terminal@1"
        },
        {
          "command": "claude-portfolio.killTerminalSystemPorts",
          "when": "view == claudeProjects && (viewItem == terminalSystemProject || viewItem == selectedTerminalSystemProject)",
          "group": "3_terminal@2"
        },
        {
          "command": "claude-portfolio.openTerminalSystemLogs",
          "when": "view == claudeProjects && (viewItem == terminalSystemProject || viewItem == selectedTerminalSystemProject)",
          "group": "3_terminal@3"
        }
      ]
    },
    "configuration": {
      "title": "Claude Portfolio",
      "properties": {
        "claudePortfolio.portfolioPath": {
          "type": "string",
          "default": "D:\\ClaudeWindows\\claude-dev-portfolio",
          "description": "Path to your Claude portfolio directory"
        },
        "claudePortfolio.autoStartProjects": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start projects when opening them"
        },
        "claudePortfolio.defaultBrowser": {
          "type": "string",
          "enum": [
            "chrome",
            "firefox",
            "edge",
            "default"
          ],
          "default": "default",
          "description": "Default browser for opening projects"
        },
        "claudePortfolio.mcpSecurityLevel": {
          "type": "string",
          "enum": [
            "enhanced",
            "basic",
            "disabled"
          ],
          "default": "enhanced",
          "description": "MCP security validation level"
        },
        "claudePortfolio.powerShellExecutionPolicy": {
          "type": "string",
          "enum": [
            "Restricted",
            "RemoteSigned",
            "Unrestricted",
            "Bypass"
          ],
          "default": "RemoteSigned",
          "description": "PowerShell execution policy for commands"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "open": "^9.1.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/claude-dev-portfolio"
  }
}